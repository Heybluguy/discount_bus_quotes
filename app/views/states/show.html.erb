<h3>All companies for: <%=@state.name%></h3>

<div class='states-container'>
  <% @state.companies.each do |company| %>
    <div class='state-container'>
      <div>
        <p><%= link_to company.name, user_company_path(company.user, company) %></p>
      </div>
      <div>
        Description: <%= company.description %>
      </div>
    </div>
  <% end %>
</div>