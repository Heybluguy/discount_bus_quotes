<br><br><h3>My Companies</h3><br>
<h3><%= link_to "Add a Company", new_user_company_path(@user) %></h3>


<div class='states-container'>
  <% @companies.each do |company| %>
    <div class='state-container'>
      <p>
        <h3><%= link_to company.name, user_company_path(@user, company) %></h3><br>
        <%= company.phone %><br>
        <%= company.email %><br>
        <%= company.website %><br>
        <%= company.description %><br>
        <%= company.created_at.strftime("Member since %m/%d/%Y") if company.created_at %><br><br>
        <%= link_to "Delete", user_company_path(@user, company), method: :delete  %><br>
        <%= link_to "Edit", edit_user_company_path(@user, company) %><br>
      </p>
    </div>
  <% end %>
</div>



