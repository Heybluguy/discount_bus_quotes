<h3>Edit Company<h3>

  <div class='all-container'>
    <div class='single-container'>
      <%= form_for [:user, @company], html: {multipart: true} do |f| %>
        <%= f.label           :name %>
        <%= f.text_field      :name %>
        Current Locations:<br>
        <% @company.states.each do |state| %>
          <%= state.name %></br>
          <h5><%= link_to "Delete", user_company_state_path(@company.user, @company, state), method: :delete %></h5>
        <% end %>
        <div class='state-collection-selectors'>
          <div class='state-collection'><%= collection_select :company, :state_ids, State.all, :id, :name, {prompt: false}, {multiple: true} %></div>
          <div class='state-collection'><%= collection_select :company, :state_ids, State.all, :id, :name, {prompt: false}, {multiple: true} %></div>
          <div class='state-collection'><%= collection_select :company, :state_ids, State.all, :id, :name, {prompt: false}, {multiple: true} %></div>
        </div>
        <%= f.label           :phone %>
        <%= f.text_field      :phone %>
        <%= f.label           :address %>
        <%= f.text_field      :address, placeholder: "placeholder text" %>
        <%= f.label           :email %>
        <%= f.text_field      :email %>
        <%= f.label           :website %>
        <%= f.text_field      :website %>
        <%= f.label           :description %>
        <%= f.text_field      :description %><br>
        <div class='images-container'>
          <% @company.images.each do |image| %>
            <%= image_tag image.image.url, size: "200x150" %><br>
            <%= link_to "Delete", image_path(image), method: :delete %><br>
          <% end %>
        </div>
        <%= label             :images, "Attach an Image" %><br />
        <%= f.file_field      :images, multiple: true %><br>
        <%= f.file_field      :images, multiple: true %><br>
        <%= f.file_field      :images, multiple: true %><br>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
