
<div class='all-container'>
  <div class='single-container user-show' >
    <h3><%= @company.name %></h3>
    Phone: <%= @company.phone %><br>
    Email: <%= @company.email %><br>
    Website: <%= @company.website %><br><br>
    Description: <%= @company.description %><br><br>
    Locations: <br><% @company.states.each do |state| %>
                  <%= state.name %></br>
               <% end %>
    <br><%= link_to "Delete", user_company_path(@company.user, @company), method: :delete  %><br>
    <%= link_to "Edit", edit_user_company_path(@company.user, @company) %><br>
    <div class='images-container'>
      <% @company.images.each do |image| %>
        <%= image_tag image.image.url, size: "200x150" %>
      <% end %>

    </div>
  </div>
</div>

    <div class='vehicles-container'>
      <div class='vehicle-container'>
        <h3><%= link_to "Add New Vehicle", new_user_company_vehicle_path(@company.user, @company) %></h3>
      </div>
      <% @company.vehicles.each do |vehicle| %>
      <div class='vehicle-container'>
        <%= vehicle.category %></br>
        <%= vehicle.seats %></br>
        <%= number_to_currency(vehicle.price) %></br>
        <%= link_to "Edit", edit_user_company_vehicle_path(@company.user, @company, vehicle) %>
        <%= link_to "Delete", user_company_vehicle_path(@company.user, @company, vehicle), method: :delete %>
      </div>
      <% end %>
    </div>

