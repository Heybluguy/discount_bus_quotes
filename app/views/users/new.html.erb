
<h3>Sign Up</h3>
<div class='all-container'>
  <div class='single-container'>
    <%= form_for @user do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
        <%= f.label :email %><br>
        <%= f.text_field :email %><br>
        <%= f.label :password %><br>
        <%= f.password_field :password %><br>
        <%= f.submit %>
    <% end %>
    </div>
</div>