<div class="container">
  <div id="news" class="section">
    <div class="content">
      <a href="#top"><h1>News</h1></a>
    </div>
    <div class="overlay"></div>
  </div>
  <div id="transportation" class="section">
    <div class="content">
    <a href="#companies"><h1>Transportation</h1></a>
    </div>
    <div class="overlay"></div>
  </div>
  <div id="about" class="section">
    <div class="content">
      <a href="#top"><h1>About</h1></a>
    </div>
    <div class="overlay"></div>
  </div>
</div>
<div class="search-form">
  <%= form_tag @companies_path, :method => :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search Near", :name => nil %>
    </p>
  <% end %>
</div>

<a id="companies"><h3>All Companies</h3></a>

<div class='all-container welcome-container'>
  <% @companies.each do |company| %>
    <div class='single-container welcome-index'>
      <div class='images-container'>
        <% company.images.each do |image| %>
          <%= image_tag image.image.url, size: "250x200" %>
        <% end %>
          <%# image_tag company.images.first.image.url, size: "200x250" if company.images.first %>
      </div>
      <h3><%= link_to company.name, user_company_path(company.user, company) %></h3>
      Website: <%= company.website %><br>
    </div><br>
  <% end %>
</div>